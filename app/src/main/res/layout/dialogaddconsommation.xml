<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent" 
   android:layout_height="fill_parent" 
   android:layout_weight="1">
   
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/nitsthem" >

                <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="62dp"
            android:text="Prix:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                
        <EditText
            android:id="@+id/editprixconsommation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="130dp"
            android:layout_y="50dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="0" >

        </EditText>

                <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dp"
            android:layout_y="130dp"
            android:text="Quantité:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                
        <EditText
            android:id="@+id/editqttconsommation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="131dp"
            android:layout_y="122dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="0" />

        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="3dp"
            android:layout_y="210dp"
            android:text="kilométrage:"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <EditText
            android:id="@+id/editkiloconsommation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="132dp"
            android:layout_y="190dp"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="11dp"
            android:layout_y="292dp"
            android:text="Voiture:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editTextconsovoiture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="132dp"
        android:layout_y="274dp"
        android:hint="pour quel voiture ?"
        android:ems="10" />
    
    <TableRow 
        android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
        >
    
        <Button
            android:id="@+id/buttonenregistrerconsommation"
            android:layout_width="119dp"
            android:layout_height="63dp"
            android:layout_x="18dp"
            android:layout_y="351dp"
            android:textColor="#FF0000FF"
            android:text="Ajouter" />

        <Button
            android:id="@+id/buttonannulerconsommation"
            android:layout_width="124dp"
            android:layout_height="64dp"
            android:layout_x="160dp"
            android:layout_y="350dp"
            android:text="Annuler"
            android:textColor="#FF0000FF" />
</TableRow>
    </LinearLayout>
</ScrollView>